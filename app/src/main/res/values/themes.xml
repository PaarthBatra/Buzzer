<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
      Base application theme.
      Uses Material Components for the base to enable Material Design 3 widgets.
    -->
    <style name="Theme.VersionPBBuzzer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <!-- Window background -->
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!--
      Splash theme: uses NoActionBar directly to avoid DarkActionBar conflict.
      Sets window background immediately to prevent white flash on launch.
    -->
    <style name="Theme.VersionPBBuzzer.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/splash_background</item>
        <item name="android:statusBarColor">@color/splash_background</item>
        <item name="android:navigationBarColor">@color/splash_background</item>
    </style>

    <!--
      Buzzer Activity theme: hides ActionBar for full-screen game feel.
    -->
    <style name="Theme.VersionPBBuzzer.NoActionBar" parent="Theme.VersionPBBuzzer">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- ── Text Appearance Overrides ──────────────────────────────────── -->

    <style name="TextAppearance.VersionPBBuzzer.Input" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.VersionPBBuzzer.WinnerLabel" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
